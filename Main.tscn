script/source = "extends CharacterBody3D

const MOVE_SPEED = 5.0
const ROTATION_ANGLE = 90.0

var target_rotation = 0.0
var current_rotation = 0.0
var is_rotating = false

func _physics_process(delta):
	#always move forward
	var direction = -transform.basis.z  
	velocity = direction * MOVE_SPEED
	
	#rotate if currently turning
	if is_rotating:
		current_rotation = lerp_angle(current_rotation, target_rotation, 25.0 * delta)
		rotation.y = current_rotation
		
		#check if rotation is complete
		if abs(current_rotation - target_rotation) < 0.01:
			rotation.y = target_rotation
			is_rotating = false
	
	move_and_slide()

func _input(event):
	if not is_rotating:
		if event.is_action_pressed(\"ui_left\"):
			target_rotation += deg_to_rad(ROTATION_ANGLE)
			is_rotating = true
		elif event.is_action_pressed(\"ui_right\"):
			target_rotation -= deg_to_rad(ROTATION_ANGLE)
			is_rotating = true
"

